# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# class         border  backgr. text    indicator   child_border
client.focused  #a3be8c $a3be8c #a3be8c #a3be8c     #a3be8c

# resize window (you can also use the mouse for that)
mode "resize" {
    # These bindings trigger as soon as you enter the resize mode

    # Pressing left will shrink the window’s width.
    # Pressing right will grow the window’s width.
    # Pressing up will shrink the window’s height.
    # Pressing down will grow the window’s height.
    bindsym h resize shrink width 5 px or 5 ppt
    bindsym j resize grow height 5 px or 5 ppt
    bindsym k resize shrink height 5 px or 5 ppt
    bindsym l resize grow width 5 px or 5 ppt

    # same bindings, but for the arrow keys
    bindsym Left resize shrink width 5 px or 5 ppt
    bindsym Down resize grow height 5 px or 5 ppt
    bindsym Up resize shrink height 5 px or 5 ppt
    bindsym Right resize grow width 5 px or 5 ppt

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# change volume or toggle mute
bindsym XF86AudioRaiseVolume exec amixer -q -D pulse sset Master 5%+ && pkill -RTMIN+1 i3blocks
bindsym XF86AudioLowerVolume exec amixer -q -D pulse sset Master 5%- && pkill -RTMIN+1 i3blocks

# Brightness control
bindsym XF86MonBrightnessUp exec xbacklight -inc 5 && pkill -RTMIN+1 i3blocks
bindsym XF86MonBrightnessDown exec xbacklight -dec 5 && pkill -RTMIN+1 i3blocks

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    font pango: Terminus (TTF) 12
    strip_workspace_numbers yes

    # Enable transparency
    i3bar_command i3bar -t
    status_command i3blocks

    position top
    height 40

    colors {
        background #09090990
        focused_workspace #09090990 #09090990 #b37eba
        inactive_workspace #09090990 #09090990 #807282
        #inactive_workspace #09090990 #09090990 #bba8bd
    }
    # class         border  backgr. text    indicator   child_border
    # client.focused  #e2123f #e2123f #e2123f #e2123f     #e2123f
}

# Leave only a small border of pixels
for_window [class="^.*"] border pixel 1

for_window [class="(?i)gsimplecal"] floating enable, move position mouse, move down 40 px
for_window [class="(?i)pavucontrol"] floating enable, move position mouse, move down 40 px, resize shrink width 10000px; resize grow width 400px; resize shrink height 10000px; resize grow height 800px;
for_window [class="(?i)wicd-client"] floating enable, move position mouse, move down 40 px, resize shrink width 10000px; resize grow width 400px; resize shrink height 10000px; resize grow height 800px;

# i3-gaps
gaps inner 25
gaps outer 16
